<div class="row">

        <div class="col-lg-3 mt-4">

          <h4 class="mt-5">Categories</h4>
          <div class="list-group">
            <a href="#" class="list-group-item active">Cars</a>
            <a href="#" class="list-group-item">Clothing</a>
            <a href="#" class="list-group-item">Pantanjali </a>
          </div>
          

        </div>
        <!-- /.col-lg-3 -->

        <div class="col-lg-9">

          <div id="carouselExampleIndicators" class="carousel slide my-4" data-ride="carousel">
            <ol class="carousel-indicators">
              <li data-target="#carouselExampleIndicators" data-slide-to="0" class="active"></li>
              <li data-target="#carouselExampleIndicators" data-slide-to="1"></li>
              <li data-target="#carouselExampleIndicators" data-slide-to="2"></li>
            </ol>
            <div class="carousel-inner" role="listbox">
              <div class="carousel-item active ">
                <img class="d-block img-fluid" src="http://imagesvc.timeincapp.com/v3/foundry/image/?q=70&w=1440&url=https%3A%2F%2Ftimedotcom.files.wordpress.com%2F2017%2F04%2Fpress03-model-x-front-three-quarter-with-doors-open-e1491840119122.jpg%3Fquality%3D85" alt="First slide">
              </div>
              <div class="carousel-item">
                <img class="d-block img-fluid" src="https://cdn.vox-cdn.com/thumbor/2xZPAI9tXlU1bcEc5BGrqWpGbNw=/0x0:3840x2160/1570x883/filters:focal(1613x773:2227x1387)/cdn.vox-cdn.com/uploads/chorus_image/image/57642479/Roadster_Hero.0.jpg" alt="Second slide">
              </div>
              <div class="carousel-item">
                <img class="d-block img-fluid w-100 " src="https://o.aolcdn.com/images/dims3/GLOB/legacy_thumbnail/630x315/format/jpg/quality/85/http%3A%2F%2Fi.huffpost.com%2Fgen%2F4434802%2Fimages%2Fn-BABA-RAMDEV-628x314.jpg" alt="Third slide">
              </div>
            </div>
            <a class="carousel-control-prev" href="#carouselExampleIndicators" role="button" data-slide="prev">
              <span class="carousel-control-prev-icon" aria-hidden="true"></span>
              <span class="sr-only">Previous</span>
            </a>
            <a class="carousel-control-next" href="#carouselExampleIndicators" role="button" data-slide="next">
              <span class="carousel-control-next-icon" aria-hidden="true"></span>
              <span class="sr-only">Next</span>
            </a>
          </div>

          <div class="row" id="product-list"> 
            {{#each products}}
                    <div class="col-lg-4 col-md-6 mb-4">
                        <div class="card h-100">
                            <a href="/pages/this.id"><img class="card-img-top img-responsive" src="{{this.image}}" alt=""></a>
                            <div class="card-body">
                                <h4 class="card-title">
                                <a href="/pages/{{this.id}}">{{this.name}}</a>
                                </h4>
                                <h5>Rs {{this.price}}</h5>
                                <h3>{{this.manufacturer}}</h3>
                                <p class="card-text">Lorem ipsum dolor sit amet, consectetur adipisicing elit. Amet numquam aspernatur!</p>
                                <a href="/root/addToCart?name={{this.name}}&price={{this.price}}"><button type="button" class="btn btn-dark">Add To Cart</button></a>
                                
                            </div>
                            <div class="card-footer">
                                <small class="text-muted">&#9733; &#9733; &#9733; &#9733; &#9734;</small>
                            </div>
                        </div>
                    </div>
            {{/each}}
          </div>
          <!-- /.row -->

        </div>
        <!-- /.col-lg-9 -->

      </div>
      <!-- /.row -->
